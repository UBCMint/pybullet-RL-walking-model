<?xml version="1.0"?>
<robot name="my_cube">
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.5 0.5 0.5"/> <!-- Cube dimensions: 0.2 x 0.2 x 0.2 -->
            </geometry>
            <material name="blue">
                <color rgba="0 1 0 1"/> <!-- Color: blue -->
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.5 0.5 0.5"/> <!-- Matching collision box -->
            </geometry>
        </collision>
        <inertial>
            <mass value="1"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
        </inertial>
    </link>
</robot>
