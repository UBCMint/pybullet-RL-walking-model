<?xml version="1.0" ?>
<robot name="quadruped_robot">
  <!-- Define the main body -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.6 0.6 0.1"/> <!-- Square body: length and width 0.6, height remains 0.1 -->
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.6 0.6 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="50.0"/>
      <origin rpy="0 0 0" xyz="0 0 1.5"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <!-- Front Left Leg -->
  <!-- Revolute Joint for controlled rotation along the y-axis -->
  <joint name="front_left_rotational" type="revolute">
    <parent link="base_link"/>
    <child link="front_left_leg"/>
    <origin xyz="0.3 0.3 -0.05" rpy="0 0 0"/> <!-- Move leg to corner of square base -->
    <axis xyz="0 1 0"/> <!-- Rotates around the y-axis -->
    <limit lower="-0.785" upper="0.785" effort="100.0" velocity="1.0"/> <!-- Â±45 degrees limit -->
  </joint>

  <link name="front_left_leg">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="1"/> <!-- Cylinder leg dimensions: radius 0.05, length 0.3 -->
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="5"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.02" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.02"/>
    </inertial>
  </link>

  <!-- Front Right Leg -->
  <joint name="front_right_rotational" type="revolute">
    <parent link="base_link"/>
    <child link="front_right_leg"/>
    <origin xyz="0.3 -0.3 -0.05" rpy="0 0 0"/>
    <axis xyz="0 1 0"/> <!-- Rotates around the y-axis -->
    <limit lower="-0.785" upper="0.785" effort="100.0" velocity="1.0"/>
  </joint>

  <link name="front_right_leg">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="1"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="5"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.02" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.02"/>
    </inertial>
  </link>

  <!-- Back Left Leg -->
  <joint name="back_left_rotational" type="revolute">
    <parent link="base_link"/>
    <child link="back_left_leg"/>
    <origin xyz="-0.3 0.3 -0.05" rpy="0 0 0"/>
    <axis xyz="0 1 0"/> <!-- Rotates around the y-axis -->
    <limit lower="-0.785" upper="0.785" effort="100.0" velocity="1.0"/>
  </joint>

  <link name="back_left_leg">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="1"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="5"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.02" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.02"/>
    </inertial>
  </link>

  <!-- Back Right Leg -->
  <joint name="back_right_rotational" type="revolute">
    <parent link="base_link"/>
    <child link="back_right_leg"/>
    <origin xyz="-0.3 -0.3 -0.05" rpy="0 0 0"/>
    <axis xyz="0 1 0"/> <!-- Rotates around the y-axis -->
    <limit lower="-0.785" upper="0.785" effort="100.0" velocity="1.0"/>
  </joint>

  <link name="back_right_leg">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="1"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="5"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.02" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.02"/>
    </inertial>
  </link>

</robot>
